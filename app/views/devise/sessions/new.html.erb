<h1 class="text-center login-title">Entrar</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "pull-left" %> <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
